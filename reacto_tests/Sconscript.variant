import os

Import('env')
Import('name')

env = env.Clone()
map_file = Dir('../').path + '/qf_demo_' + name + '.map'
env.Append(LINKFLAGS = ['-Xlinker', '-Map=' + map_file])

sources = env.FindFiles('./tests', '*.c')
sources.extend (env.FindFiles('./tests', '*.cpp'))
sources.extend (env.FindFiles('./platform_' + name, '*.c'))
sources.extend (env.FindFiles('./platform_' + name, '*.cpp'))
objects = env.SourceToObjects(sources)
Depends(objects, env['CPPINCLUDES'])

exes = env.Program(['../qf_demo_' + name, map_file], sources)
exe = {'exe': exes[0], 'map': exes[1]}
Return('exe')
